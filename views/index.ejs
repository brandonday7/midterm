<!DOCTYPE html>
<html class='no-js' lang="en">
  <head>

    <title>The Future is Now </title>


    <link rel='stylesheet' href='./styles/main.css' type='text/css'/>
    <link rel='stylesheet' href='./styles/dropdown.css' type='text/css'/>
    <link rel='stylesheet' href='./styles/foundation.min.css' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src='./scripts/app.js'></script>



  </head>



  <body>

    <nav id='nav-bar'>
      <span>Your order total: <p id='order-total'> $0.00</p></span>
      <input type='submit' value='submit' id="order-submit">
      <button class='button' id='dropdown-button' type='button' data-toggle='form-dropdown'>Review Order</button>
      <div class='dropdown-pane' id='form-dropdown' data-dropdown>
        <h3 id='your-order-heading'>Your Order: </h3>
        <div id='dropdown-items-container'></div>


        <textarea type='text' id='user-first' placeholder='First Name'></textarea>
        <textarea type='text' id='user-last' placeholder='Last Name'></textarea>
        <textarea type='text' id='user-phone' placeholder='Phone Number'></textarea>
        <textarea type='email' id='user-email' placeholder='example@email.com'></textarea>
        <button id='filler-submit-button'>Button</button>
      </div>

    </nav>



    <div class='row small-up-1 medium-up-3 large-up-4' id='menu-container'>
      <% for (key in result) { %>
        <%- include('./partials/_menu_item', { result: result, key: key }) %>
      <% } %>
    </div>


    <script src="./../scripts/vendor/jquery.js"></script>
    <script src="./../scripts/vendor/what-input.js"></script>
    <script src="./../scripts/vendor/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>

  </body>
</html>
